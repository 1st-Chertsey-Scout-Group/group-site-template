---
import { Image } from "astro:assets";
import logo from "@/images/group-badge.png";
import type { NavigationLink } from "@/models/navigation-link";

import { logoAlt, groupName } from "@/customisations/site.json";
import { title as sectionsTitle } from "@/customisations/sections.json";
import { title as addressTitle } from "@/customisations/address.json";
import { title as contactTitle } from "@/customisations/contact-form.json";
import HeaderLinkItem from "./header-link-item.astro";

const links: NavigationLink[] = [
  {
    text: sectionsTitle,
    url: "/#sections",
    target: "_self",
  },
  {
    text: addressTitle,
    url: "/#address",
    target: "_self",
  },
  {
    text: contactTitle,
    url: "/#contact",
    target: "_self",
  },
];
---

<div class="flex flex-col items-center gap-4 pt-8">
  <Image
    loading={"eager"}
    src={logo}
    alt={logoAlt}
    quality={100}
    width={128}
    height={128}
    class="aspect-square"
  />
  <h1 class="text-5xl text-center font-extrabold tracking-tight">
    {groupName}
  </h1>
  <ul class="flex flex-wrap items-center justify-center gap-4 mx-2">
    {
      links &&
        links.map(({ url, target, text }) => (
          <HeaderLinkItem url={url} target={target} text={text} />
        ))
    }
  </ul>
</div>
