---
import {
    CONTACT_EMAIL_LABEL,
    CONTACT_EMAIL_PLACEHOLDER,
    CONTACT_MESSAGE_LABEL,
    CONTACT_MESSAGE_PLACEHOLDER,
    CONTACT_SUBJECT_LABEL,
    CONTACT_SUBJECT_PLACEHOLDER,
    CONTACT_SUBMIT_BUTTON,
    CONTACT_SUBTITLE,
    CONTACT_TITLE,
} from "@/lib/consts";
import Seperator from "./seperator.astro";
import { SendHorizonal } from "lucide-react";
---

<section id="contact" class="px-4 py-8 antialiased">
    <Seperator loading="lazy" />
    <div class="max-w-screen-md mb-8 lg:mb-16 mx-auto">
        <h2
            class="mb-4 text-4xl tracking-tight font-extrabold text-center text-primary"
        >
            {CONTACT_TITLE}
        </h2>
        <p class="mb-8 lg:mb-16 font-light text-center sm:text-xl">
            {CONTACT_SUBTITLE}
        </p>
        <form action="#" class="space-y-8">
            <div>
                <label for="email" class="block mb-2 font-medium">
                    {CONTACT_EMAIL_LABEL}
                </label>
                <input
                    type="email"
                    id="email"
                    class="shadow-sm bg-input text-input-foreground border border-input-border rounded-lg focus:ring-1 focus:ring-primary block w-full p-2.5"
                    placeholder={CONTACT_EMAIL_PLACEHOLDER}
                    required
                />
            </div>
            <div>
                <label for="subject" class="block mb-2 font-medium">
                    {CONTACT_SUBJECT_LABEL}
                </label>
                <input
                    type="text"
                    id="subject"
                    class="block p-3 w-full text-input-foreground bg-input rounded-lg border border-input-border shadow-sm focus:ring-primary"
                    placeholder={CONTACT_SUBJECT_PLACEHOLDER}
                    required
                />
            </div>
            <div class="sm:col-span-2">
                <label for="message" class="block mb-2 font-medium">
                    {CONTACT_MESSAGE_LABEL}
                </label>
                <textarea
                    id="message"
                    rows="6"
                    class="block p-2.5 w-full text-input-foreground bg-input rounded-lg shadow-sm border border-input-border focus:ring-primary"
                    placeholder={CONTACT_MESSAGE_PLACEHOLDER}></textarea>
            </div>
            <button
                type="submit"
                class="group inline-flex items-center justify-center py-3 px-5 font-medium text-center text-white rounded-lg bg-primary w-full focus:ring-4 focus:outline-none focus:ring-primary"
            >
                {CONTACT_SUBMIT_BUTTON}
                <SendHorizonal  className="w-5 h-5 ml-2 -mr-1 transition-transform duration-100 group-hover:-rotate-12" />
            </button>
        </form>
    </div>
</section>
