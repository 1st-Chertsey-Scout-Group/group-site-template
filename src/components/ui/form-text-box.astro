---
import { cn } from "@/lib/utils";

interface Props {
  id: string;
  type: "email" | "text";
  label: string;
  placeholder: string;
}

const { id, type, label, placeholder }: Props = Astro.props;
---

<div>
  <label for={id} class="block mb-2 font-medium">
    {label}
  </label>
  <input
    type={type}
    id={id}
    name={id}
    class="block p-2.5 w-full rounded-lg bg-input text-input-foreground border border-input-border focus:ring-1 focus:ring-primary"
    placeholder={placeholder}
    required
  />
</div>
