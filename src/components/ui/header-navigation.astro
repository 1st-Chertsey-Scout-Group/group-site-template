---
import { Image } from "astro:assets";

import fleur from "@/images/fleur-de-lis.svg";
import logo from "@/images/group-badge.png";
import { SITE_TITLE } from "@/lib/consts";
import type { NavigationLink } from "@/models/navigation-link";
import Seperator from "./seperator.astro";

const links: NavigationLink[] = [
    {
        text: "Sections",
        url: "#sections",
    },
    {
        text: "Contact",
        url: "#contact",
    },
];
---

<div class="flex flex-col items-center gap-4 pt-8">
    <Image
        loading={"eager"}
        src={logo}
        alt={"Runnymede scouts logo"}
        quality={100}
        width={92}
        height={92}
        class="aspect-square"
    />
    <h1 class="text-5xl text-center">{SITE_TITLE}</h1>
    <ul class="flex flex-wrap items-center justify-center gap-4 mx-2">
        {
            links &&
                links.map((link) => (
                    <li>
                        <a class="text-center hover:underline" href={link.url}>
                            {link.text}
                        </a>
                    </li>
                ))
        }
    </ul>
</div>
